  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}
.personal-left{
  display: flex;
  flex-direction: row;
}
.banner-left{
  width: 88rpx;
