.content-container{
  width: 100%;
  height: 100%;
  background: #fafafa;
}
.video-content{
  padding-bottom: 20rpx;
  background: #fff;
}
.page-video{
  /* position: fixed;
  top:2rpx;
  left:5rpx; */
  width: 99%;
  height: auto;
  margin: 0 auto;
}
#myVideo{
  width: 100%;
}
.video-msg{
  margin: 15rpx 0 10rpx;
}
.video-title{
  font-size: 24rpx;
  color: #000;
  font-weight: bold;
  margin: 5rpx 0 10rpx 6rpx;
}
.video-main{
  margin: 15rpx 10rpx 8rpx;
  display: flex;
  flex-direction: column;
}
.video-main text{
   font-size: 20rpx;
   color: #333;
   margin: 5rpx 0;
}
.personal-content{
  margin: 30rpx 0;
  padding: 40rpx 10rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.personal-left{
  display: flex;
  flex-direction: row;
}
.banner-left{
  width: 88rpx;
  height: 88rpx;
  margin-left: 5rpx;
}
.banner-image{
  width: 100%;
  height: 88rpx;
  border-radius: 50%;
}
.banner-right{
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}
.banner-right text{
  font-size: 20rpx;
  color: #333;
  margin: 2rpx 0;
}
.banner-right .name{
  color: green;
  font-size: 22rpx;
}
.personal-btn{
  font-size: 24rpx;
  color: #fff;
  background: green;
}
.content-box{
  margin: 20rpx auto 0;
  background: #fff;
  padding: 10rpx 0 0;
}
.content-box .title{
  margin: 15rpx auto;
  text-align: center;
  font-size: 20rpx;
  color: #000;
  text-align: center;
}
.content-box .content{
   padding: 5rpx 10rpx;
   font-size: 20rpx;
   color: #000;
}