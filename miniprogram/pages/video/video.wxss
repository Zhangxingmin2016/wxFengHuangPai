.content-container{
  position: absolute;
  width: 100%;
  height: 100%;
  background: #000;
}
.video-content{
  padding-bottom: 20rpx;
}
.page-video{
  /* position: fixed;
  top:2rpx;
  left:5rpx; */
  width: 99%;
  height: auto;
  margin: 0 auto;
}
#myVideo{
  width: 100%;
}
.video-msg{
  margin: 15rpx 0 10rpx;
}
.video-title{
  font-size: 24rpx;
  color: #ccc;
  font-weight: bold;
  margin: 5rpx 0 15rpx 6rpx;
}
.video-main{
  margin: 15rpx 10rpx 0rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #1e1e1e;
  padding-bottom: 30rpx;
}
.video-main text{
   font-size: 22rpx;
   color: #7d7d7d;
   margin: 5rpx 0;
}
.personal-content{
  margin: 20rpx 10rpx;
  padding-bottom: 40rpx;
  /* background: #fff; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #1e1e1e;
}
.personal-left{
  display: flex;
  flex-direction: row;
}
.banner-left{
  width: 88rpx;
  height: 88rpx;
  margin-left: 5rpx;
}
.banner-image{
  width: 100%;
  height: 88rpx;
  border-radius: 50%;
}
.banner-right{
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}
.banner-right text{
  font-size: 20rpx;
  color: #7d7d7d;
  margin: 4rpx 0;
}
.banner-right .name{
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}
.personal-btn{
  /* height: 48rpx;
  line-height: 48rpx; */
  font-size: 26rpx;
  color: #fff;
  background: #fd4341 !important;
  width: 180rpx !important;
  text-align: center;
  display: inline-block;
}
.content-box{
  margin: 0 15rpx;
  /* background: #fff; */
}
.comment-result{
  margin: 20rpx 0;
}
.comment-result text{
  font-size: 20rpx;
  color: #7f7f7f;
}
.comment-msg{
  margin: 30rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.comment-left{
  width: 66rpx;
  height: 66rpx;
  margin-left: 5rpx;
}
.comment-left .image{
  width: 100%;
  height: 66rpx;
  border-radius: 50%;
}
.comment-right{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}
.comment-right text{
   font-size: 20rpx;
   margin: 5rpx 0;
   color: #fff;
}
.upload-btn{
  font-size: 24rpx;
  color: #fff;
  background: green;
  /* width: 220rpx !important; */
  text-align: center;
  display: inline-block;
  margin-left: 30rpx;
  margin-right: 60rpx;
}
.picOut{
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.picOut-item image{
  width: 100%;
  height: 100%;
}
.picOut-item{
  position: relative;
}
.close{
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  font-size: 40rpx;
  border-radius: 50%;
}