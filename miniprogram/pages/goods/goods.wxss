.box-banner{
  width: 100%;
  height: 280rpx;
  line-height: 280rpx;
  text-align: center;
  font-size: 38rpx;
  color: #333;
  font-weight: bold;
  position: relative;
  background: radial-gradient(circle at 70% 30%, white, lightblue);
  background: -ms-radial-gradient(circle at 70% 30%, white, lightblue);
  background: -webkit-radial-gradient(circle at 70% 30%, white, lightblue);
  background: -moz-radial-gradient(circle at 70% 30%, white, lightblue);
}
.banner-right{
  display: inline-block;
  position: absolute;
  right: 20rpx;
  bottom: -100rpx;
}
.personal-btn{
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  width: 180rpx !important;
  text-align: center;
  display: inline-block;
}
.box-title{
  margin: 0 20rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  flex-direction: column;
}
.box-title .main-title{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin: 20rpx 0;
}
.title-msg{
  font-size: 22rpx;
  color: #333;
}
.mag-box2{
  margin: 5px 10px;
