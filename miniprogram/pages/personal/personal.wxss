.box-banner{
  width: 100%;
  height: 200rpx;
  background: radial-gradient(circle at 70% 30%, white, lightblue);
  background: -ms-radial-gradient(circle at 70% 30%, white, lightblue);
  background: -webkit-radial-gradient(circle at 70% 30%, white, lightblue);
  background: -moz-radial-gradient(circle at 70% 30%, white, lightblue);
  display: flex;
  justify-content: space-between;
}
.banner-left{
  margin: 52px 0 0 30rpx;
  width: 120rpx;
  height: 120rpx;
  border: 4rpx;
  background: #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
}
.banner-image{
  width: 100rpx;
  height: 100rpx;
}
.banner-right{
  margin: 140rpx 39rpx 0 0;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  display: flex;
}
.message-icon{
  height: 32rpx;
  width: 32rpx;
  margin: 4rpx 0 0 10rpx;
}
.personal-message{
  margin: 60rpx 18rpx 0;
}
.msg-name{
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #ccc;
}
.msg-name .name{
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}
.msg-name .des{
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #666;
}
.msg-box{
  margin: 20rpx 0px 10rpx 10rpx;
}
.msg-box text{
  display: inline-block;
  margin: 5rpx 8rpx;
  padding: 0 20rpx;
  height: 42rpx;
  line-height: 42rpx;
  font-size: 26rpx;
  color: #666;
  background: #dad6da;
}
.msg-box1{
  margin: 10rpx 0px 10rpx 10rpx;
  display: flex;
  flex-direction: row;
}
.msg-box1 .msg-box1-modle{
  margin: 10rpx 50rpx;
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
}
.msg-box1-modle text{
  display: inline-block;
  font-size: 26rpx;
  margin: 5rpx 0;
  color: #333;
}
.msg-box1-modle .num{
  color: #000;
  font-weight: bold;
}
.mag-box2{
  margin: 5px 10px;
  border-bottom: 1px solid #ccc;
}
.mag-box2 text{
  font-size: 24rpx;
  color: #000;
  font-weight: bold;
}
.msg-box3{
  margin: 16rpx 20rpx;
}
.date .day{
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
}
.date .mouth{
  font-size: 22rpx;
  color: #333;
  margin: 0 5rpx;
  font-weight: bold;
}
.date .year{
  font-size: 20rpx;
  color: #333;
  font-weight: bold;
}
.box3-modle{
  margin-bottom: 20rpx;
}
.box3-image{
  /* width: 120rpx;
  height: 180rpx; */
  margin: 10rpx 0;
}
.box3-image image{
  width: 200rpx;
  height: 180rpx;
}
.box3-des text{
  margin: 10rpx 0;
  font-size: 24rpx;
  color: #000;
}