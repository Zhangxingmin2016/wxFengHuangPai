.content-container{
  width: 100%;
  height: 100%;
  background: #fafafa;
  padding: 10px 0;
}
.title{
  color: rgb(245, 67, 67);
  margin-left: 45rpx;
  font-size: 38rpx;
  font-weight: bold;
}
.modle-box{
 width: 96%;
 margin: 0 auto;
 background: #fff;
 padding: 10px 0;
 margin: 30rpx auto;
}
.banner{
  display: flex;
  flex-direction: row;
  margin: 5rpx 8rpx;
}
.banner-left{
  width: 65%;
  font-size: 42rpx;
  font-weight: bold;
  color: rgba(33, 34, 35, 1);
}
.banner-right{
  width: 35%;
  margin-left: 0%;
}
.banner-image{
  width: 100%;
  height: 200rpx;
}
.tip{
  color: rgba(161, 165, 172, 1);
  font-size: 32rpx;
}