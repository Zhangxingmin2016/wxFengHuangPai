<view class='content-container'>
  <view>
   <!-- 搜索 -->
   <view class="search-input">
    <view class="search-img">
     <image class="search-icon" src="../../images/search.png"></image>
    </view>
    <view class="search-value">
      <input class="sou-input" placeholder="搜索"/>
    </view>
   </view>
   <view class="weui-add">
     <!-- <image class="add-image" src="../../images/add.png"></image> -->
      凤凰东莞派，品质优选官
   </view>
      <!-- 轮播广告区 -->
   <view class="page-swiper">
     <swiper class="banner" autoplay="true" indicator-dots="true" >
      <view wx:for="{{imgUrl}}" wx:key="*this">
        <swiper-item>
          <image src="{{item.url}}" data-src="{{item.value}}" class="banner-img"></image>
        </swiper-item>
      </view>
     </swiper>
   </view>
      <view class="weui-modle-content" bindtap="goToTastDetail">
     <image class="modle-image" src="../../images/image13.jpg"></image>
     <text class="title">品鉴专区</text>
   </view>
   <view class="weui-modle-content" bindtap="goToDetail">
     <image class="modle-image" src="../../images/image10.jpg"></image>
     <text class="title">乐玩专区</text>
   </view>
   <view class="weui-modle-content" bindtap="goToDetail">
     <image class="modle-image" src="../../images/image9.jpg"></image>
     <text class="title">好物专区</text>
   </view>
  <view class="weui-modle-content" bindtap="goToDetail">
     <image class="modle-image" src="../../images/image12.jpg"></image>
