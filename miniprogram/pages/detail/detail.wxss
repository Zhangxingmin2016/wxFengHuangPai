.content-container{
  width: 100%;
  height: 100%;
  background: #fafafa;
  padding: 10px 0;
}
.modle-box{
 width: 96%;
 margin: 0 auto;
 background: #fff;
 padding: 10px 0;
 margin: 30rpx auto;
}
.banner{
  display: flex;
  flex-direction: row;
  margin: 5rpx 8rpx;
}
.banner-left{
  width: 60rpx;
  height: 60rpx;
  margin-left: 5rpx;
}
.banner-image{
  width: 100%;
  height: 60rpx;
  border-radius: 50%;
}
.banner-right{
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}
.banner-right-top{
  font-size: 20rpx;
  color: #999;
  margin: 5rpx 0 0rpx;
}
.banner-right-bom{
  font-size: 20rpx;
  color: #333;
  font-weight: bold;
}
.content{
  width: 100%;
  height: auto;
  margin: 20rpx 0;
}
.content-img{
  width: 100%;
  height: 360rpx;
}
.content-des{
  font-size: 20rpx;
  color: #333;
  margin: 0 0 15rpx;
}
.message{
  margin: 10px 0;
  display: flex;
  flex-direction: column;
}
.msg-top{
  font-size: 20rpx;
  color: #666;
}
.msg-bom{
  font-size: 20rpx;
  color: #000;
  margin-top: 5rpx;
}